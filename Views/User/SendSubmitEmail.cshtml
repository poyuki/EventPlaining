
@{
    ViewBag.Title = "Отправка сообщения";
    Layout = "_Layout";
}

<h2 class="form-heading">Регистрация</h2>
<div>
    @if (Model.SuccessStatus)
    {
        <p>@Model.Message <a href="http://@Model.Email" target="_blank">Ваша почта</a></p>
    }
    else
    {
        <p>@Model.Message</p>
    }
</div>
